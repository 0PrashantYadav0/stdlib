# VARIABLES #

# Define the command for linting license headers:
LICENSE_HEADER_LINT ?= $(TOOLS_PKGS_DIR)/lint/license-header-file-list/bin/cli

# Define the command flags:
LICENSE_HEADER_LINT_FLAGS ?=


# DEPENDENCIES #

# Note: keep in alphabetical order
include $(TOOLS_MAKE_LIB_DIR)/lint/license-headers/c.mk
include $(TOOLS_MAKE_LIB_DIR)/lint/license-headers/cpp.mk
include $(TOOLS_MAKE_LIB_DIR)/lint/license-headers/fortran.mk
include $(TOOLS_MAKE_LIB_DIR)/lint/license-headers/javascript.mk
include $(TOOLS_MAKE_LIB_DIR)/lint/license-headers/julia.mk
include $(TOOLS_MAKE_LIB_DIR)/lint/license-headers/markdown.mk
include $(TOOLS_MAKE_LIB_DIR)/lint/license-headers/python.mk
include $(TOOLS_MAKE_LIB_DIR)/lint/license-headers/r.mk


# RULES #

#/
# Lints license headers.
#
# @example
# make lint-license-headers
#/
lint-license-headers: $(LICENSE_HEADER_LINT) $(NODE_MODULES)
	$(QUIET) NODE_PATH="$(NODE_PATH)" $(FIND_FILES_CMD) | $(NODE) $(LICENSE_HEADER_LINT) $(LICENSE_HEADER_LINT_FLAGS)

.PHONY: lint-license-headers

#/
# Lints license headers for a specified list of files.
#
# ## Notes
#
# -   This rule is useful when wanting to lint a list of files generated by some other command (e.g., a list of changed files obtained via `git diff`).
# -   The recipe uses a loop in order to avoid "argument list too long" errors.
#
#
# @param {string} FILES - list of file paths
#
# @example
# make lint-license-headers-files FILES='/foo/a.js /bar/b.js'
#/
lint-license-headers-files: $(LICENSE_HEADER_LINT) $(NODE_MODULES)
	$(QUIET) for file in $(FILES); do \
		echo $$file; \
	done | NODE_PATH="$(NODE_PATH)" $(NODE) $(LICENSE_HEADER_LINT) $(LICENSE_HEADER_LINT_FLAGS)

.PHONY: lint-license-headers-files
