
# VARIABLES #

CAT ?= cat

# Define the path to the Makefile usage text file for displaying help information:
MAKE_USAGE_PATH ?= $(TOOLS_MAKE_DIR)/usage.txt


# TARGETS #

# Print Makefile help.
#
# This target prints a help message and lists available targets.

help:
	$(CAT) $(MAKE_USAGE_PATH)

.PHONY: help

