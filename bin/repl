#!/usr/bin/env bash

# DESCRIPTION #

# Script to run the stdlib REPL.


# VARIABLES #

# Define the command for `node`:
export NODE=node

# Define the path to the stdlib REPL executable:
export REPL_PATH=./lib/node_modules/\@stdlib/repl/bin/cli


# FUNCTIONS #

# Defines an error handler.
on_error() {
	echo 'ERROR: An error was encountered during execution.'
	cleanup
	exit 1
}

# Starts the REPL.
start() {
	$NODE "$REPL_PATH"
}

# Runs clean-up tasks.
cleanup() {
	echo ''
}


# MAIN #

# Exit immediately if one of the executed commands exits with a non-zero status:
set -e

# Set an error handler to print captured output and perform any clean-up tasks:
trap 'on_error' ERR

# Start the REPL environment:
start

# Run cleanup tasks:
cleanup
