#!/usr/bin/env node
'use strict';

var randn = require( '@stdlib/math/base/random/box-muller' );
var Plot = require( './../lib' );

var now;
var y1;
var y2;
var x;
var i;

// Create some data...
now = ( new Date() ).getTime();
x = new Float64Array( 100 );
y1 = new Float64Array( x.length );
y2 = new Float32Array( x.length );
for ( i = 0; i < x.length; i++ ) {
	x[ i ] = i;
	y1[ i ] = 50.0 + 10.0*randn();
	y2[ i ] = 10.0 + 5.0*randn();
}

// Create a new plot:
var plot = new Plot( [x,x], [y1,y2] );
plot.width = 600;
plot.height = 480;
plot.symbols = [ 'open-circle', 'closed-circle' ];
plot.symbolsSize = 6;

// View the plot in a window:
plot.view( 'window' );
