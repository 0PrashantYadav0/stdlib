#!/usr/bin/env node
'use strict';

var randn = require( '@stdlib/math/base/random/box-muller' );
var Plot = require( './../lib' );

var now;
var x;
var y;
var i;

// Create some data...
now = ( new Date() ).getTime();
x = new Float64Array( 100 );
y = new Float64Array( x.length );
for ( i = 0; i < x.length; i++ ) {
	x[ i ] = now + i*360000;
	y[ i ] = 50.0 + 10.0*randn();
}

// Create a new plot:
var plot = new Plot( [x], [y] );
plot.width = 600;
plot.height = 480;
plot.xScale = 'time';
plot.xTickFormat = '%H:%M';

// View the plot in a browser:
plot.view( 'browser' );
