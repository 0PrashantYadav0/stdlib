#!/usr/bin/env node
'use strict';

// MODULES //

var fs = require( 'fs' );
var resolve = require( 'path' ).resolve;
var getKeys = require( 'object-keys' ).shim();
var indexOf = require( '@stdlib/utils/index-of' );
var readFileSync = require( '@stdlib/fs/read-file' ).sync;
var stdout = require( '@stdlib/streams/base/stdout' );
var CLI = require( '@stdlib/tools/cli' );


// MAIN //

/**
* Main execution sequence.
*
* @private
*/
function main() {
	var names;
	var flags;
	var opts;
	var cli;

	// Create a command-line interface:
	cli = new CLI({
		'pkg': require( './../package.json' ),
		'options': require( './../etc/cli_opts.json' ),
		'help': readFileSync( resolve( __dirname, '..', 'docs', 'usage.txt' ), {
			'encoding': 'utf8'
		})
	});
	flags = cli.flags();

	opts = {};
	if ( flags.data ) {
		opts.data = flags.data;
	}
	names = [ 'army', 'cities', 'temperature' ];
	if ( indexOf( names, opts.data ) === -1 ) {
		ndjson();
	} else {
		csv( opts.data );
	}

	/**
	* Prints data as newline-delimited JSON (ndjson).
	*
	* @private
	*/
	function ndjson() {
		var data;
		var keys;
		var i;
		data = require( './../lib' )( opts );
		keys = getKeys( data );
		for ( i = 0; i < keys.length; i++ ) {
			console.log( JSON.stringify( data[ keys[i] ] ) ); // eslint-disable-line no-console
		}
	} // end FUNCTION ndjson()

	/**
	* Prints data as CSV.
	*
	* @private
	* @param {string} filename - file name (no extension)
	*/
	function csv( filename ) {
		var fpath = resolve( __dirname, '../data/'+filename+'.csv' );
		fs.createReadStream( fpath )
			.pipe( stdout )
			.on( 'close', onClose );
	} // end FUNCTION csv()

	/**
	* Exits the CLI.
	*
	* @private
	*/
	function onClose() {
		cli.exit( 0 );
	} // end FUNCTION onClose()
} // end FUNCTION main()

main();
