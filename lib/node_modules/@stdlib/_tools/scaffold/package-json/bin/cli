#!/usr/bin/env node
'use strict';

// MODULES //

var resolve = require( 'path' ).resolve;
var readFileSync = require( '@stdlib/fs/read-file' ).sync;
var CLI = require( '@stdlib/tools/cli' );
var create = require( './../lib' );


// MAIN //

/**
* Main execution sequence.
*
* @private
* @returns {void}
*/
function main() {
	var flags;
	var space;
	var opts;
	var cli;
	var pkg;

	// Create a command-line interface:
	cli = new CLI({
		'pkg': require( './../package.json' ),
		'options': require( './../etc/cli_opts.json' ),
		'help': readFileSync( resolve( __dirname, '..', 'docs', 'usage.txt' ), {
			'encoding': 'utf8'
		})
	});

	// Get any provided command-line flags:
	flags = cli.flags();

	opts = {};
	if ( flags.name ) {
		opts.name = flags.name;
	}
	if ( flags.desc ) {
		opts.desc = flags.desc;
	}
	if ( flags.keywords ) {
		opts.keywords = flags.keywords.split( ',' );
	}
	if ( flags.cmd ) {
		opts.cmd = flags.cmd;
	}
	if ( flags.browser ) {
		opts.browser = flags.browser;
	}
	if ( flags.space ) {
		space = parseInt( flags.space, 10 );
	} else {
		space = 2;
	}

	pkg = create( opts );
	if ( flags.compact ) {
		console.log( JSON.stringify( pkg ) ); // eslint-disable-line no-console
	} else {
		console.log( JSON.stringify( pkg, null, space ) );  // eslint-disable-line no-console
	}
} // end FUNCTION main()

main();
